@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5 bg-white">

    <div class="text-center mb-5">
        <h1 class="display-4 text-purple fw-bold">
            <i class="fas fa-store text-purple"></i>
            Welcome to ABC Retailers!
        </h1>
        <p class="lead text-secondary">✨ We have the best deals and latest products! You’re one shop away! ✨</p>
    </div>

    <!-- Action Boxes -->
    <div class="row mb-5">
        <div class="col-md-3 mb-3">
            <a asp-controller="Customer" asp-action="Index" 
               class="card text-center shadow-sm border-0 rounded-3 p-4 h-100 text-decoration-none">
                <i class="fas fa-users fa-2x mb-2 text-primary"></i>
                <span class="fw-bold text-purple">View Customers</span>
                <small class="text-muted">(@Model.CustomerCount total)</small>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Product" asp-action="Index" 
               class="card text-center shadow-sm border-0 rounded-3 p-4 h-100 text-decoration-none">
                <i class="fas fa-box fa-2x mb-2 text-success"></i>
                <span class="fw-bold text-purple">View Products</span>
                <small class="text-muted">(@Model.ProductCount total)</small>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Order" asp-action="Index" 
               class="card text-center shadow-sm border-0 rounded-3 p-4 h-100 text-decoration-none">
                <i class="fas fa-shopping-cart fa-2x mb-2 text-warning"></i>
                <span class="fw-bold text-purple">View Orders</span>
                <small class="text-muted">(@Model.OrderCount total)</small>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Upload" asp-action="Index" 
               class="card text-center shadow-sm border-0 rounded-3 p-4 h-100 text-decoration-none">
                <i class="fas fa-upload fa-2x mb-2 text-info"></i>
                <span class="fw-bold text-purple">Upload Files</span>
                <small class="text-muted">(Payment proofs)</small>
            </a>
        </div>
    </div>

    <!-- Storage Initialization -->
    @if (Model.CustomerCount == 0 && Model.ProductCount == 0 && Model.OrderCount == 0)
    {
        <div class="alert alert-warning rounded-3 shadow-sm">
            <h5><i class="fas fa-exclamation-triangle text-purple"></i> First Time Setup</h5>
            <p>It looks like this is your first time running the application. Click the button below to initialize Azure Storage.</p>
            <form asp-action="InitializeStorage" method="post" style="display: inline;">
                <button type="submit" class="btn btn-purple text-white rounded-pill shadow-sm">
                    <i class="fas fa-cog"></i> Initialize Azure Storage
                </button>
            </form>
        </div>
    }

    <!-- Featured Products Section -->
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4 text-purple">
                <i class="fas fa-star text-warning"></i> Featured Products
            </h2>

            @if (Model.FeaturedProducts.Any())
            {
                <div class="row justify-content-center">
                    @foreach (var product in Model.FeaturedProducts)
                    {
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                            <div class="card h-100 shadow-sm rounded-3 border-0">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top rounded-top" alt="@product.ProductName" style="height: 150px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center rounded-top" style="height: 150px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="card-body d-flex flex-column text-center">
                                    <h6 class="card-title fw-bold text-purple">@product.ProductName</h6>
                                    <p class="card-text small text-muted flex-grow-1">
                                        @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                                    </p>
                                    <div class="mt-auto">
                                        <p class="card-text mb-1">
                                            <strong class="text-purple">@product.Price.ToString("C")</strong>
                                        </p>
                                        <small class="text-muted">Stock: @product.StockAvailable</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info rounded-3 shadow-sm">
                    <i class="fas fa-info-circle text-purple"></i> No products available yet.
                    <a asp-controller="Product" asp-action="Create" class="alert-link text-purple fw-bold">Add your first product</a>!
                </div>
            }
        </div>
    </div>
</div>

<!-- Custom Purple Theme -->
<style>
    body {
        background-color: #f8f9fa; /* light gray-white for contrast */
    }
    .text-purple { color: #7e57c2 !important; }
    .btn-purple { background-color: #7e57c2; border: none; }
    .btn-purple:hover { background-color: #6a42a1; }
    .card {
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 16px rgba(0,0,0,0.1);
    }
</style>
