@model ABCRetailers.Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Delete Customer
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">Warning!</h5>
                    You are about to delete this customer. This action cannot be undone.
                </div>

                <h5>Customer Details:</h5>
                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name @Model.Surname</dd>

                    <dt class="col-sm-3">Username:</dt>
                    <dd class="col-sm-9">@Model.Username</dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Shipping Address:</dt>
                    <dd class="col-sm-9">@Model.ShippingAddress</dd>

                    <dt class="col-sm-3">Customer ID:</dt>
                    <dd class="col-sm-9"><code>@Model.RowKey</code></dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="RowKey" />

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>