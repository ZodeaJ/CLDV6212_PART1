@model List<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2 class="mb-4">My Orders</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You haven't placed any orders yet.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Order ID</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Order Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><code>@order.Id</code></td>
                        <td>@order.ProductName</td>
                        <td>@order.Quantity</td>
                        <td>@order.UnitPrice.ToString("C")</td>
                        <td>@((order.Quantity * order.UnitPrice).ToString("C"))</td>
                        <td>@order.Status</td>
                        <td>@(order.OrderDateUtc?.ToLocalTime().ToString("MMM dd, yyyy h:mm tt") ?? "Not set")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}